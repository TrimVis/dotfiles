[module/spotify]
type = custom/script
interval = 1
format-prefix = " "
format = <label>
exec = music
exec-if = [ "$(playerctl status 2>&1)" != "No players found" ]
format-underline = ${colors.underline}
click-left = playerctl play-pause
click-right = playerctl next

[module/weather]
type = custom/script
exec = wedder -k c722581327d761b79e1c8dae50c471d5 --lat 47.36667 --lon 8.55
exec-if = ping openweathermap.org -c 2
tail = true
format-underline = ${colors.underline}
;format-padding = 12
format-margin = 6

[module/brightness]
type = custom/script

exec = brightness
label =  %output:1:3%
label-underline = ${colors.underline}
interval = 2

[module/time]
type = internal/date
interval = 20

time = %H:%M
label =  %time%

[module/date]
type = internal/date
interval = 20

date = "%d.%m.%y"
label =  %date%

[module/xwindow]
format-prefix = "|"
type = internal/xwindow
label = "%title:0:30:...% |"
label-padding = 1

[module/xkeyboard]
type = internal/xkeyboard
blacklist-0 = num lock

