###########################################
##                                       ##
## Trim's simple X hotkey daemon rc file ##
##                                       ##
###########################################

#---------#
#  Menus  #
#---------#

#Drun/Emoji selector
super + shift + {d,e}
	rofi -show {drun,emoji} -show-icons

#Mounting and unmounting of storage devices
#super + shift + @{m,u}
#	{dmenumountdisk,dmenuunmountdisk}

#Wallpaper changer
super + shift + @w
	change_bg ~/Pictures/Wallpapers/

#Password Manager
super + shift + @p
	rofi-pass --last-used

#System ShutdownSuspendRebootLockscreen-Dialog
super + shift + x
	ssrl-dialog

#Multimonitor Setup
super + p
	multimonitor



#------------#
#  Programs  #
#------------#

#Terminal
super + {_,shift +} Return
	$TERMINAL {_, -e st-cd "$(xcwd)"}

#Browser
super + w
	$BROWSER

#Filemanager
super + r
	$FILE

#Videoplayer
super + v
	$VIDEO

#Process Explorer
super + e
	$TERMINAL -e glances

#Sound control
super + ctrl + v
	pavucontrol

#------------#
#  Controls  #
#------------#

# Brightness controls
{_,super +} XF86MonBrightnessUp
	lightctl -i {5, 1} -n
{_,super +} XF86MonBrightnessDown
	lightctl -d {5, 1} -n
shift + {F2,F1}
	lightctl {-r,-s} -n
 
# Volume control 
{_,super +} XF86AudioRaiseVolume
	volumectl -i {5, 1} -n
{_,super +} XF86AudioLowerVolume
	volumectl -d {5, 1} -n
XF86AudioMute 
	volumectl -m -n

# selected Area not working: couldn't grab keyboard
# Screenshots
{_,super +} Print
	scrot {'screenshot_%y-%m-%d-%s.png','screenshot_%y-%m-%d-%s_$wx$h.png' -s} -e 'mv $f /home/trim/Pictures/Screenshots/' && notify-send "scrot" "Took screenshot"
	
#let sxhkd reload its config
super + Escape
	pkill -USR1 sxhkd && notify-send "sxhkd" "Restarted background process"

#------------------#
#  BSPWM Settings  #
#------------------#
	
#start/stop master slave layout
super + alt + {_,shift+} s
	{~/.config/bspwm/ms_start.sh &, ~/.config/bspwm/ms_stop.sh}

#
# bspwm hotkeys
#

# quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# close and kill
super + {_,shift + }q
	bspc node -{c,k}

# rotate tree
super + ctrl + r
	bspc node -R 90

# alternate between the tiled and monocle layout
super + m
	bspc desktop -l next

## send the newest marked node to the newest preselected node
#super + y
#	bspc node newest.marked.local -n newest.!automatic.local

# swap the current node and the biggest node
super + g
	bspc node -s biggest

#
# state/flags
#

# set the window state
super + {t,shift + t,s,f}
	bspc node -t {tiled,pseudo_tiled,floating,fullscreen}

# set the node flags
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

## focus the node for the given path jump
#super + {p,b,comma,period}
#bspc node -f @{parent,brother,first,second}

# focus the next/previous node in the current desktop
super + {_,shift + }c
	bspc node -f {next,prev}.local

# focus the next/previous desktop in the current monitor
super + bracket{left,right}
	bspc desktop -f {prev,next}.local

# focus the last node/desktop
super + {grave,Tab}
	bspc {node,desktop} -f last

# focus the older or newer node in the focus history
super + {o,i}
	bspc wm -h off; \
	bspc node {older,newer} -f; \
	bspc wm -h on

# focus or send to the given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

#
# move/resize
#

# contract a window by moving one of its side inward
super + alt + {h,j,k,l}
	bspc node -z {right -20 0,top 0 20,bottom 0 -20,left 20 0}

# expand a window by moving one of its side outward
super + alt + shift + {h,j,k,l}
	bspc node -z {left -20 0,bottom 0 20,top 0 -20,right 20 0}

# move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-20 0,0 20,0 -20,20 0}

#
# preselect
#

# preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel
