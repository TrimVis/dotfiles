#!/usr/bin/sh

#TEST="xrandr --auto
#        xrandr --output eDP-1 --off
#	xrandr --output HDMI-A-0 --off
#        xrandr --output HDMI-A-0 --auto --right-of eDP-1
#        xrandr --output HDMI-A-0 --auto --left-of eDP-1
#	xrandr --output HDMI-A-0 --auto --same-as eDP-1 "

RET=$(echo "auto
eDP-1 OFF
eDP-1 ON
HDMI OFF
HDMI ON
HDMI above of eDP-1
HDMI right of eDP-1
HDMI left of eDP-1
HDMI mirror eDP-1" | rofi -p "Screen Config" -dmenu)

if [ "$RET" = "eDP-1 OFF" ]
then
	xrandr --output eDP-1 --off
elif [ "$RET" = "eDP-1 ON" ]
then
	xrandr --output eDP-1 --auto

elif [ "$RET" = "HDMI OFF" ]
then
	xrandr --output HDMI-1 --off

elif [ "$RET" = "HDMI ON" ]
then
	xrandr --output HDMI-1 --auto

elif [ "$RET" = "HDMI above of eDP-1" ]
then
	xrandr --output HDMI-1 --auto --above eDP-1

elif [ "$RET" = "HDMI right of eDP-1" ]
then
	xrandr --output HDMI-1 --auto --right-of eDP-1

elif [ "$RET" = "HDMI left of eDP-1" ]
then
	xrandr --output HDMI-1 --auto --left-of eDP-1

elif [ "$RET" = "HDMI mirror eDP-1" ]
then
	xrandr --output HDMI-1 --auto --same-as eDP-1

else
	xrandr --auto
fi
