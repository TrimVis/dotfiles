#!/bin/sh

# Note: switch over to pulsemixer instead of pavucontrol
#	1) pavucontrol;;

case $BLOCK_BUTTON in
	1) st -e pulsemixer;;
	3) pamixer -t;;
esac

MUTE=$(pamixer --get-mute)
if [ "$MUTE" = "true" ]
then
	echo "󰖁 <>"
else
	VOL=$(pamixer --get-volume)
	ICON="󰕾"
	if [ "$VOL" -le 60 ]; then
		ICON="󰖀"
	fi
	if [ "$VOL" -le 30 ]; then
		ICON="󰕿"
	fi
	echo "${ICON} ${VOL}%"
fi




