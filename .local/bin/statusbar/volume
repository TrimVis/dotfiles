#!/bin/sh

case $BLOCK_BUTTON in
	1) pavucontrol;;
esac

MUTE=$(amixer get Master -M | awk '{ print $6 }' | tail -1)
if [ "$MUTE" = "[off]" ]
then
	echo " <>"
else
	VOL="$(amixer get Master -M | awk -F'[' '{ print $2 }' | awk -F'%' '{ print $1 }' | tail -1)"
	ICON=""
	if [ "$VOL" -le 50 ]; then
		ICON=""
	elif [ "$VOL" -le 100 ]; then
		ICON=""
	fi
	echo "${ICON} ${VOL}"
fi




