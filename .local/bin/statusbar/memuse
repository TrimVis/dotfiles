#!/bin/bash

case $BLOCK_BUTTON in
	3) notify-send " Memory Hogs" "$(/usr/bin/ps axch -o cmd:15,%mem --sort=-%mem | head)";;
esac

MEM=$(free -h | awk '/^Mem:/ {print $3 "/" $2}')
MEM=${MEM/","/"."}

echo "$MEM"
echo

INUSE=$(echo "$MEM" | awk -F '/' '{print $1}' | awk -F ',' '{print $1}')

NUMS=${INUSE/"G"/}
NUMS=${NUMS/"Mi"/}
KIND=${INUSE/$NUMS/}

if [ "$KIND" = "G" ] && [ "$NUMS" -ge 6 ]
then
	echo " "
	echo "#FF0000"
elif [ "$KIND" = "G" ] && [ "$NUMS" -ge 3 ]
then
	echo " "
	echo "#FFFF00"
fi
