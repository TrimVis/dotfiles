#!/bin/sh

TOUT=$(xset q | grep timeout | awk '{ print $2 }')

case $BLOCK_BUTTON in
    1) if [ "$TOUT" = "0" ]
    then
        xset s on
				TOUT="1"
    else
        xset s off
				TOUT="0"
    fi
esac

#light -G | awk -F'.' '{ print $1 }'

if [ "$TOUT" = "0" ]
then
		echo "OFF"
    echo " "
    echo "#0000AF"
else
		echo "ON"
		echo " "
fi
