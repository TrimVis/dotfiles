#!/bin/bash

DEV="wlp0s20f3"
IP=$(ip addr show dev $DEV | awk '/inet / {print $2}') 

case $BLOCK_BUTTON in
	1) notify-send "üåç Wifi" "Local IP: $IP
Global IP: $(curl ifconfig.me)";;
	3) nm-connection-editor;;
esac

SSID=$(iwconfig $DEV | awk -F\" '/ESSID:/ { print $2 }' | xargs)

if [ -z "$SSID" ]
then
	echo "Û∞§Æ off"
else
	STRE=$(iwconfig $DEV | awk -F'=' '{ print $2 }' | awk '/..\/../{ print $1 }' | tail -n 1)
	PERC=$(bc <<< "scale=0;100*$STRE")
  ICON="Û∞§®"

  if [ $PERC -lt 80 ]; then
    ICON="Û∞§•"
  fi
  if [ $PERC -lt 60 ]; then
    ICON="Û∞§¢"
  fi
  if [ $PERC -lt 40 ]; then
    ICON="Û∞§ü"
  fi
  if [ $PERC -lt 20 ]; then
    ICON="Û∞§Ø"
  fi
	echo "$ICON \"$SSID\" $PERC%"
fi
