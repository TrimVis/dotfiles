#!/bin/sh

PLAYING=$(playerctl status 2> /dev/null)
TITLE=$(playerctl metadata title 2> /dev/null | cut -c1-24)
ARTIST=$(playerctl metadata artist 2> /dev/null | cut -c1-16)

if [ "$PLAYING" = "Playing" ]
then
	echo " $TITLE [$ARTIST]"
elif [ "$PLAYING" = "Paused" ]
then
	echo " $TITLE [$ARTIST]"
fi
