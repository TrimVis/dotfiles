#!/bin/bash

#CPU=$(iostat | awk '/..,../{ print $1}')
CPU=$(iostat -c 1 3 | tail -n 5 | awk '/..,../{ print $1}')
CPU=${CPU/","/"."}


case $BLOCK_BUTTON in
	1) notify-send "ðŸ’» CPU temp:" "$(sensors | awk '/Tdie:/ {print $2}')";;
  3) notify-send "ðŸ’» CPU hogs:" "$(ps axch -o %cpu,cmd --sort=-%cpu | head -n 8)" ;;
esac

echo "$CPU%"

if [[ $(bc -l <<< "$CPU > 90.0") -eq 1 ]]
then
	echo " "
	echo "#FF0000"
elif [[ $(bc -l <<< "$CPU > 50.0") -eq 1 ]]
then
	echo " "
	echo "#FFFF00"
fi
