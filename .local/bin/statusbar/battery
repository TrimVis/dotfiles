#!/bin/sh

case $BLOCK_BUTTON in
	1) notify-send "⚡ Battery:" "ETA: $(acpi | awk '{print $5}' | grep -o "[0-9:]\+") ";;
esac

ACPI=$(acpi | awk '{print $3 $4}')
BAT=$(echo "$ACPI" | grep -o "[0-9]\+")
STAT=$(echo "$ACPI" | awk -F',' '{print $1}')
ICON=""

if [ "$BAT" -le 10 ]; then
	ICON=""
elif [ "$BAT" -le 30 ]; then
	ICON=""
elif [ "$BAT" -le 60 ]; then
	ICON=""
elif [ "$BAT" -le 90 ]; then
	ICON=""
fi

if [ "$STAT" = "Charging" ]; then
	echo " $BAT+"
else
	echo "${ICON} $BAT"

fi
